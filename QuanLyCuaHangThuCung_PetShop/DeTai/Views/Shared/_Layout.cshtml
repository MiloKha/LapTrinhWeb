<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!--Bootstrap-->
    <link href="~/Views/Shared/Style.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link href="~/Context/StyleSheet.css" rel="stylesheet" />
</head>
<body style="background-color:white">

    <header>
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-sm-12 col-xs-12 " style="margin-top:100px">
                    <div class="text">
                        <span><b>Hotline:</b> 1900 123 456</span>
                    </div>
                </div>

                <div class="col-md-4 col-sm-12 col-xs-12 ">
                    <div class="logo ">
                        <a href="~/Home/Index" class="logo-wrapper" title="PetShop">
                            <img src="~/Image/petshop.jpg" class="img-responsive center-block" width="200" height="200" />
                        </a>
                    </div>
                </div>

                <div class="col-md-4 col-sm-12 col-xs-12" style="margin-top:100px">
                    <ul style="list-style-type:none">
                        <li style="display:inline-block; margin-left:30px">
                            <a href="~/Home/DangNhap" style="text-decoration:none; color:black">
                                <span>TÀI KHOẢN</span>
                            </a>
                        </li>
                        <li style="display:inline-block; margin-left:30px">
                            <a href="~/GioHang/ShowGioHang" style="text-decoration:none; color:black">
                                <span>GIỎ HÀNG</span>
                                <img src="~/Image/Gio%20hang%201.jpg" width="50" height="50" />
                            </a>
                        </li>
                        <li style="display:inline-block; margin-left:20px">
                            <a href="#" style="text-decoration:none; color:black">
                                <img src="~/Image/K%c3%adnh%20l%c3%bap%201.jpg" width="40" height="40" />
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <br />
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-lg-12" style="border:solid black 1px; background-color: black">
                    <ul id="nav" class="nav" style="margin:10px">
                        <li class="nav-item">
                            <a style="text-decoration:none; color:white; font-size:20px" class="nav-link" href="~/Home/Index" title="Trang chủ">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a style="text-decoration:none; color:white; font-size:20px" class="nav-link" href="~/ThuCung/DS_ThuCung" title="Thú cưng">Thú cưng</a>
                            <ul class="dropdown-menu">
                                <li class="nav-item">
                                    <a style="text-decoration:none; color:white; font-size:20px" class="nav-link" href="#" title="Chó">Chó</a>
                                </li>
                                <li class="nav-item">
                                    <a style="text-decoration:none; color:white; font-size:20px" class="nav-link" href="#" title="Mèo">Mèo</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a style="text-decoration:none; color:white; font-size:20px" class="nav-link" href="~/SanPham/DS_SanPham" title="Sản phẩm">Sản phẩm</a>
                            <ul class="dropdown-menu">
                                <li class="nav-item">
                                    <a style="text-decoration:none; color:white; font-size:20px" class="nav-link" href="#" title="Thức ăn">Thức ăn chó</a>
                                </li>
                                <li class="nav-item">
                                    <a style="text-decoration:none; color:white; font-size:20px" class="nav-link" href="#" title="Đồ chơi">Thức ăn mèo</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a style="text-decoration:none; color:white; font-size:20px" class="nav-link" href="~/KhachHang/DS_KhachHang2" title="Member">Member</a>
                        </li>
                        <li class="nav-item">
                            <a style="text-decoration:none; color:white; font-size:20px" class="nav-link" href="#" title="Hỗ trợ">Hỗ trợ</a>
                        </li>
                        <li class="nav-item">
                            <a style="text-decoration:none; color:white; font-size:20px" class="nav-link" href="~/Home/LienHe" title="Liên hệ">Liên hệ</a>
                        </li>
                        <li class="nav-item">
                            <div class="input-group" style="margin-left:170px">
                                <input type="search" placeholder="Nhập từ bạn cần tìm? " class="form-control">
                                <div class="input-group-prepend">
                                    <button type="submit" class="btn btn-warning">Search</button>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </header>

    <main>
        <div class="container">
            <div class="row">
                <marquee style="font-size:30px">BLACK FRIDAY 2022 - SĂN SALE BÙNG NỔ CÙNG DOG AND CAT PET SHOP</marquee>
                <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel" style="margin-bottom:30px;">
                    <div class="carousel-inner">
                        <div class="carousel-item">
                            <img src="~/Image/Baner2.jpg" class="d-block w-100" height="450" alt="..." />
                        </div>
                        <div class="carousel-item active">
                            <img src="~/Image/Baner3.jpg" class="d-block w-100" height="450" alt="..." />
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>         
                </div>
                <br />
                @RenderBody()
                <br />
            </div>
            <marquee style="font-size:30px">Ưu đãi độc quyền. Giảm 30 - 50% cho những ai có ngày sinh trùng với Black Friday. Đã hời lại còn hời hơn. Triển thôi mọi người ơi.  </marquee>
        </div>
    </main>

    <footer>
        <div class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 col-lg-12" style="border:solid black 1px; background-color:black">

                        <table style="color:white; display:inline-block">
                            <thead class="thread">
                                <tr>
                                    <th>Pet Shop</th>
                                    <th style="padding-left:50px">Chính sách</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>140 Lê Trọng Tấn, Tây Thạnh, Tân Phú, TP.HCM </td>
                                    <td style="padding-left:50px">Chính sách bảo hành</td>
                                </tr>

                                <tr>
                                    <td><b>Hotline:</b> 1900 123 456</td>
                                    <td style="padding-left:50px">Chính sách thanh toán</td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td style="padding-left:50px">Chính sách bảo mật</td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td style="padding-left:50px">Chính Sách Bảo Vệ Thông Tin Cá Nhân</td>
                                </tr>
                            </tbody>
                        </table>
                        <div style="float:right; display:inline-block; margin-right:30px; margin-top:30px">
                            <img src="~/Image/Facebook_icon.svg.png" width="70" height="70" style="margin-right:20px" />
                            <img src="~/Image/900px-Instagram_icon.png" width="70" height="70" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
</body>
</html>
